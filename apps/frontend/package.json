{
	"name": "frontend",
	"version": "0.1.0",
	"private": true,
	"sideEffects": [
		"*.css"
	],
	"scripts": {
		"setup": "bun install",
		"dev": "bunx next dev --turbopack",
		"build": "bunx next build",
		"build-dev": "cp .env.development .env.local && bunx --bun next build",
		"build-prod": "cp .env.production .env.local && bunx --bun next build",
		"start": "next start",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint --write ./src"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@hookform/resolvers": "^5.2.2",
		"@shared/tooling": "workspace:*",
		"@shared/ui": "workspace:*",
		"axios": "^1.12.2",
		"babel-plugin-react-compiler": "^19.1.0-rc.3",
		"jwt-decode": "^4.0.0",
		"next": "^15.5.3",
		"react": "19.1.1",
		"react-countup": "^6.5.3",
		"react-dom": "19.1.1",
		"react-hook-form": "^7.62.0",
		"react-hot-toast": "^2.6.0",
		"tailwind-merge": "^3.3.1",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"typescript": "^5.9.2",
		"@types/node": "^24.4.0",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@tailwindcss/postcss": "^4.1.13",
		"tailwindcss": "^4.1.13"
	}
}

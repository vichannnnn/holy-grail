{
	"name": "new-frontend",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"setup": "bun install",
		"dev": "cp .env .env.local && next dev --turbopack",
		"build-local": "cp .env .env.local && bunx --bun next build",
		"build-dev": "cp .env.development .env.local && bunx --bun next build",
		"build-prod": "cp .env.production .env.local && bunx --bun next build",
		"start": "next start",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint --write ./src"
	},
	"dependencies": {
		"@shared/tooling": "workspace:*",
		"@shared/ui": "workspace:*",
		"next": "15.5.2",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"typescript": "^5",
		"@types/node": "^24.3.0",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@tailwindcss/postcss": "^4",
		"tailwindcss": "^4"
	}
}
